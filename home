    <script>
        const funnelData = {
            topo: {
                title: "ATRAÇÃO & DESCOBERTA",
                desc: "Impactamos quem ainda não conhece a Clínica Blay através de conteúdo dinâmico e visualmente impecável.",
                tags: ["Reels 4K", "Técnicas de Hook", "Legendas Dinâmicas", "Alcance Regional"]
            },
            meio: {
                title: "CONSCIÊNCIA & AUTORIDADE",
                desc: "Construímos confiança. Mostramos o Dr. Estalinin como a solução definitiva para o emagrecimento saudável.",
                tags: ["Stories Estratégicos", "Provas Sociais", "Bastidores", "Nutrição & Saúde"]
            },
            fundo: {
                title: "CONVERSÃO & AGENDAMENTO",
                desc: "Chamadas diretas para ação (CTA). Campanhas focadas em levar o paciente para o WhatsApp da clínica.",
                tags: ["Botão de Agendamento", "Tráfego Direto", "Remarketing", "Mensagens Prontas"]
            }
        };

        const investmentData = { fee: 2500, min: 600, ideal: 1000 };
        let investmentChartInstance = null;

        function updateFunnelDetails(stage) {
            const data = funnelData[stage];
            const titleEl = document.getElementById('funnel-title');
            const descEl = document.getElementById('funnel-desc');
            const tagsEl = document.getElementById('funnel-tags');
            const container = document.getElementById('funnel-details');

            container.style.opacity = '0';
            setTimeout(() => {
                titleEl.textContent = data.title;
                descEl.textContent = data.desc;
                tagsEl.innerHTML = '';
                data.tags.forEach(tag => {
                    const span = document.createElement('span');
                    span.className = 'px-3 py-1.5 bg-white border border-stone-200 rounded-lg text-[10px] font-black text-stone-800 uppercase tracking-wider shadow-sm';
                    span.textContent = tag;
                    tagsEl.appendChild(span);
                });
                container.style.opacity = '1';
            }, 200);
        }

        function updateInvestment(scenario) {
            document.getElementById('btn-min').className = scenario === 'min' 
                ? "flex-1 py-3 text-[10px] font-black uppercase tracking-widest rounded-xl transition-all bg-emerald-600 text-white shadow-xl"
                : "flex-1 py-3 text-[10px] font-black uppercase tracking-widest rounded-xl transition-all text-stone-500 hover:text-white";
            document.getElementById('btn-ideal').className = scenario === 'ideal' 
                ? "flex-1 py-3 text-[10px] font-black uppercase tracking-widest rounded-xl transition-all bg-emerald-600 text-white shadow-xl"
                : "flex-1 py-3 text-[10px] font-black uppercase tracking-widest rounded-xl transition-all text-stone-500 hover:text-white";

            const adValue = investmentData[scenario];
            const total = investmentData.fee + adValue;
            document.getElementById('ad-spend-value').textContent = `R$ ${adValue.toLocaleString('pt-BR')},00`;
            document.getElementById('total-value').textContent = `R$ ${total.toLocaleString('pt-BR')},00`;
            document.getElementById('ad-spend-label').textContent = scenario === 'min' ? "Cenário Iniciante" : "Cenário Performance";

            if (investmentChartInstance) {
                investmentChartInstance.data.datasets[0].data = [investmentData.fee, adValue];
                investmentChartInstance.update();
            }
        }

        document.addEventListener('DOMContentLoaded', () => {
            const ctxInvest = document.getElementById('investmentChart').getContext('2d');
            investmentChartInstance = new Chart(ctxInvest, {
                type: 'doughnut',
                data: {
                    labels: ['PRODUÇÃO', 'ANÚNCIOS'],
                    datasets: [{
                        data: [2500, 1000],
                        backgroundColor: ['#292524', '#10b981'],
                        borderWidth: 0,
                        hoverOffset: 20
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { position: 'bottom', labels: { color: '#78716c', font: { family: 'Inter', weight: '800', size: 10 } } }
                    },
                    cutout: '85%'
                }
            });

            const ctxTarget = document.getElementById('targetingChart').getContext('2d');
            new Chart(ctxTarget, {
                type: 'radar',
                data: {
                    labels: ['EMAGRECIMENTO', 'SAÚDE', 'OBESIDADE', 'FITNESS', 'QUALIDADE'],
                    datasets: [{
                        data: [100, 80, 90, 60, 85],
                        backgroundColor: 'rgba(16, 185, 129, 0.1)',
                        borderColor: '#10b981',
                        borderWidth: 3,
                        pointBackgroundColor: '#10b981'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        r: {
                            grid: { color: '#e7e5e4' },
                            pointLabels: { font: { family: 'Inter', size: 9, weight: '900' }, color: '#444' },
                            ticks: { display: false }
                        }
                    },
                    plugins: { legend: { display: false } }
                }
            });
            updateFunnelDetails('topo');
        });

        function scrollToSection(id) {
            document.getElementById(id).scrollIntoView({ behavior: 'smooth' });
        }
    </script>
